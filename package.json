{
  "name": "noodler",
  "version": "0.1.0",
  "description": "A modular, framework-agnostic music toolkit for web applications",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./scale": {
      "types": "./dist/scale/index.d.ts",
      "import": "./dist/scale/index.js",
      "require": "./dist/scale/index.cjs"
    },
    "./audio": {
      "types": "./dist/audio/index.d.ts",
      "import": "./dist/audio/index.js",
      "require": "./dist/audio/index.cjs"
    },
    "./board": {
      "types": "./dist/board/index.d.ts",
      "import": "./dist/board/index.js",
      "require": "./dist/board/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "tsup",
    "build:demo": "vite build demo",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "music",
    "audio",
    "web-audio",
    "synth",
    "synthesizer",
    "scale",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zachherwitz/noodler.git"
  },
  "homepage": "https://github.com/zachherwitz/noodler",
  "bugs": {
    "url": "https://github.com/zachherwitz/noodler/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
